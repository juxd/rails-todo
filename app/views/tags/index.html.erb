<h1>Tags:</h1>
<%= link_to 'New', new_tag_path %>
<%= link_to 'View Items', items_path %>
<table>
	<tr>
		<th>Tag</th>
		<th>Show Items</th>
		<th colspan="2"></th>
	</tr>

	<% @tags.each do |tag| %>
		<tr>
			<td><%= tag.tag %></td>
			<td><%= link_to "Show", tag_path(tag) %></td>
			<% if tag.id > 0 %>
				<td><%= link_to "Edit", edit_tag_path(tag) %>
				<td><%= button_to "Delet this", tag_path(tag), method: :delete %></td>
			<% else %>
				<td colspan="2">You cannot delete this</td>
			<% end %> 
		</tr>
	<% end %>
</table>
