<h1>New Item</h1>
<%= form_with scope: :item, url: items_path, local: true do |form| %>

	<p>
		<%= form.label :task %><br>
		<%= form.text_area :task %>
	</p>

	<p>
		<%= form.label :due %><br>
		<%= form.datetime_field :due %>
	</p>

	<p>
		<%= form.submit %>
	</p>

<% end %>

<%= link_to 'Back', items_path %>
